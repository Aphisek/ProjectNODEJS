<div class="list-group-item">
				<h3 class="text-center"><%= contact[id].name %></h3>
				<p>email: <a href="mailto:<%= contact[id].email %>"><%= contact[id].email %></a></p>
				<p>phone: <%= contact[id].phone %></p>
				<p>url: <a href="http://<%= contact[id].url %>"><%= contact[id].url %></a></p>
				<p>Notes:</p>
				<p class="well well-lg"><%= contact[id].notes %></p>

				<a href="/edit/<%= id %>">
					<button class="btn btn-default">
						<span class="glyphicon glyphicon-pencil"></span><span> - Edit</span>
					</button>
				</a>

				<a href="#" onclick="removeContact(<%= id %>)"><button class="btn btn-default">
					<span class="glyphicon glyphicon-remove"></span><span> - Remove</span>
				</button></a>
			</div>